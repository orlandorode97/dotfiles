{
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "html",
        "json",
        "css",
        "scss",
        "go"
    ],
    "coc.preferences.hoverTarget": "float",
    "diagnostic.checkCurrentLine": true,
    "diagnostic.errorSign": "\u2718",
    "diagnostic.infoSign": "?",
    "diagnostic.warningSign": "!",
    "go.goplsOptions": {
        "staticcheck": true
    },
    "languageserver": {
        "golang": {
            "command": "gopls",
            "filetypes": [
                "go"
            ],
            "rootPatterns": [
                "go.mod"
            ]
        }
    },
    "suggest.noselect": false
}
